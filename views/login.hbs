    <script>
   document.addEventListener('DOMContentLoaded', () => {
    let urlParams = new URLSearchParams(window.location.search);
    let message = urlParams.get('message');
    if (message) {
      Swal.fire({
        text: message,
        icon: 'error'
      }).then(() => {
        window.location.href = "/";
      });
    }
  });
</script>
